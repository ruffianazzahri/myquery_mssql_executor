@model Synergy_Test.Models.LoginModel
@using Microsoft.AspNetCore.Mvc.Rendering;
@using Microsoft.AspNetCore.Http



@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyQuery</title>
    <link href="~/Content/adminlte.min.css" rel="stylesheet" />
    <link href="~/lib/adminlte/plugins/fontawesome-free/css/all.css" rel="stylesheet" />
    <link href="~/lib/adminlte/plugins/fontawesome-free/css/fontawesome.css" rel="stylesheet" />
    <link href="~/lib/adminlte/plugins/fontawesome-free/css/solid.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/adminlte/dist/css/adminlte.min.css" rel="stylesheet" />
</head>

<body class="bg">
    <div class="col d-flex align-items-center justify-content-center">
        <div class="card w-50" style="margin-top: 100px;">
            <div class="card-body">
                <div class="text-center">
                    <img src="~/images/Icon.png" class="d-inline-block align-text-top" style="width:200px;" />
                    <h5 class="mt-3">Login Page</h5>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.Result))
                {
                    <div class="alert alert-danger mt-5 mb-5" role="alert">
                        @ViewBag.Result
                    </div>

                }
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
 
         

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <p class="mt-3" id="copyright"></p>
                        <p>Back To <a href="@Url.Action("Index", "Home")">Home</a></p>
                    </div>
           
                }


            </div>
        </div>
    </div>



    <script>
        $(document).ready(function () {
            $("#text").keyup(function (event) {
                if (event.which === 13) {
                    $("#submit").click();
                }
            });

            $("#submit").click(function () {

            })
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script>
        function copyrightYear() {
            var d = new Date();
            var y = d.getFullYear();
            document.getElementById("copyright").innerHTML = 'Copyright &copy; ' + y + ' Muhammad Ruffian Azzahri';
        }

        copyrightYear();
    </script>
    <style>

        .bg-mask {
            background-color: #000000;
        }

        .bg {
            background: url('@Url.Content("~/images/centralhk.jpg")');
            width: 100%;
            background-size: cover;
        }

        .mask {
            background: rgba(255, 255, 255, 0.83);
            border-radius: 2px;
        }

    </style>
</body>
</html>
